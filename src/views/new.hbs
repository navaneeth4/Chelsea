<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }
  th, td {
    border: 1px solid black;
    padding: 8px;
    text-align: left;
  }
  th {
    background-color: #ddd;
  }
</style>
<h1>Player Details</h1>
<title>Player Details</title>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Position</th>
      <th>Nationality</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.age}}</td>
        <td>{{this.position}}</td>
        <td>{{this.nationality}}</td>
        <td>
          <form action="/cfc/{{this._id}}?_method=DELETE" method="POST">
            <button onclick="return confirm('Are you sure you want to delete this player?')">Delete</button> 
          </form>
            {{!-- <form action="/cfc/{{player._id}}" method="POST">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this player?')">Delete</button>
            </form> --}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
